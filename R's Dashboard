<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Storage Bin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
            text-align: center;
        }
        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            color: #333;
        }
        .item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #f9f9f9;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
        }
        .progress {
            width: 100%;
            background: #ddd;
            height: 10px;
            border-radius: 5px;
            margin-top: 5px;
            overflow: hidden;
        }
        .progress-bar {
            height: 100%;
            background: green;
        }
        .low-stock {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Smart Storage Bin Dashboard</h2>
        <div id="inventory"></div>
    </div>

    <script>
        const inventoryData = [
            { name: "Coffee Beans", quantity: 50, max: 100 },
            { name: "Milk", quantity: 20, max: 50 },
            { name: "Sugar", quantity: 10, max: 50 },
            { name: "Cups", quantity: 70, max: 100 }
        ];

        function updateInventory() {
            const inventoryDiv = document.getElementById("inventory");
            inventoryDiv.innerHTML = "";
            
            inventoryData.forEach(item => {
                let percentage = (item.quantity / item.max) * 100;
                let statusClass = percentage < 30 ? "low-stock" : "";
                let barColor = percentage < 30 ? "red" : "green";
                
                inventoryDiv.innerHTML += 
                    <div class="item">
                        <div>
                            <strong>${item.name}</strong>
                            <div class="progress">
                                <div class="progress-bar" style="width: ${percentage}%; background: ${barColor};"></div>
                            </div>
                            <span class="${statusClass}">${item.quantity} / ${item.max}</span>
                        </div>
                    </div>
                ;
            });
        }

        updateInventory();
    </script>
</body>
</html>
